# Ocean Video - Environment Example
# Copy this file to ".env" at the root of the Flutter app and adjust values as needed.

# Base URL for backend REST APIs (OTP, contacts). Ignored when MOCK_MODE=true.
# Example: https://api.example.com
API_BASE_URL=

# Socket.IO signaling server URL for WebRTC offer/answer and ICE exchange.
# Leave empty to disable signaling (the Call screen will show an informational banner).
# Example: https://signal.example.com
SIGNALING_URL=

# Comma-separated STUN server URLs to help NAT traversal.
# Example: stun:stun.l.google.com:19302,stun:global.stun.twilio.com:3478
STUN_URLS=stun:stun.l.google.com:19302

# Optional TURN server for relaying media when direct P2P fails.
# Recommended for production reliability. Requires username and password.
# Example: turn:turn.example.com:3478
TURN_URL=

# TURN username (if TURN_URL is set)
TURN_USERNAME=

# TURN password/credential (if TURN_URL is set)
TURN_PASSWORD=

# Enable local mock mode for OTP and contacts.
# When true:
# - OTP returns a local mock token (no backend)
# - Contacts are mocked
# - Call screen initializes local camera preview; signaling is optional
# Accepts: true | false
MOCK_MODE=true
