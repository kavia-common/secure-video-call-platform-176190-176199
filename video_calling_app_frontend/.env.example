# Backend REST API base URL (e.g., https://api.example.com)
API_BASE_URL=

# Signaling server URL (Socket.IO/websocket), e.g., https://signal.example.com
SIGNALING_URL=

# Comma-separated list of STUN server URLs, e.g.:
# STUN_URLS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
STUN_URLS=

# TURN server configuration
TURN_URL=
TURN_USERNAME=
TURN_PASSWORD=

# When true, enables mock flows for OTP, contacts, and allows demo call UI without real signaling
MOCK_MODE=true
